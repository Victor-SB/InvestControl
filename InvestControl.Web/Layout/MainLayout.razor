@inherits LayoutComponentBase
@using MudBlazor
@using InvestControl.Web.Layout

<MudThemeProvider IsDarkMode="true" Theme="ItauTheme" />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudLayout>
        <MudAppBar Color="Color.Primary" Elevation="2">
            <MudText Typo="Typo.h6" Class="ms-2">InvestControl - Itaú</MudText>
        </MudAppBar>

        <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2" Width="240px">
            <NavMenu />
        </MudDrawer>

        <MudMainContent Class="pa-4 mt-9">
            @Body
        </MudMainContent>
    </MudLayout>


@code {
    private MudTheme ItauTheme = new MudTheme
        {
            PaletteDark = InvestControlPalette.CreatePallete
        };
}